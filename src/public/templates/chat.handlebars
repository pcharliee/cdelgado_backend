<h1>Chat with us</h1>
<div class="messages-container">
  {{#if messages}}
    {{#each messages}}
    <div class="message">
      <p class='email-text'>{{this.email}} <span>{{this.date}}</span></p>
      <p>{{this.message}}</p>
    </div>
    {{/each}}
  {{/if}}
</div>
<div class='chat-container'>
  <label>
    <input type="email" id="email" name="email" placeholder="Enter your email" required>
  </label>
  <label>
    <textarea name="text" id="message" cols="60" rows="5" required></textarea>
  </label>
</div>

